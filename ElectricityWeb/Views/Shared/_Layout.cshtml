<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <title>@ViewBag.Title</title>

    <!-- jQuery
    ------------------------------------------------>
    <script src="~/Content/js/jquery/jquery-2.1.3.min.js"></script>
    <script src="~/Content/js/jquery/jquery.unobtrusive-ajax.min.js"></script>

    <!-- Materialize
    ------------------------------------------------>
    <link href="~/Content/css/materialize.min.css" rel="stylesheet" media="screen,projection" />
    <script src="~/Content/js/target/materialize.min.js"></script>


    <!-- Custom styles
    ------------------------------------------------>
    <link rel="stylesheet" href="~/Content/css/site.min.css" />
    <link rel="stylesheet" href="~/Content/css/menu.min.css" />
    <script src="~/Content/js/site.js"></script>

</head>

<body>
    <ul id="slideMenu" class="side-nav full col s4">
        <li class="hoverable menu-heading"><a href="@Url.Action("Index", "Home")">Главная</a></li>
        <li>
            <a class="menu-heading">Потери</a>
            <ul>
                <li class="hoverable"><a href="@Url.Action("Transformator", "Loss")">В трансформаторе</a></li>
                <li class="hoverable"><a href="@Url.Action("Transmission", "Loss")">В линиях передач</a></li>
            </ul>
        </li>
        <li>
            <a class="menu-heading">Двигатели</a>
            <ul>
                <li class="hoverable"><a href="@Url.Action("Async", "Engine")">Асинхронный</a></li>
                <li class="hoverable"><a href="@Url.Action("Parallel", "Engine")">Параллельного возбуждения</a></li>
                <li class="hoverable"><a href="@Url.Action("Serial", "Engine")">Последовательного возбуждения</a></li>
            </ul>
        </li>
        <li>
            <a class="menu-heading">Линии</a>
            <ul>
                <li class="hoverable">
                    <a href="@Url.Action("Choose", "Line")">Расчет сечения провода</a>
                </li>
            </ul>
        </li>
        <li class="hoverable menu-heading">
            <a href="#">О сайте</a>
        </li>
    </ul>
    <div class="container">
        <header>
            <a href="#" data-activates="slideMenu" class="button-collapse left">
                <i class="large mdi-navigation-menu"></i>
            </a>
            <h1>@ViewBag.Title</h1>
        </header>

        <section class="main">
            @RenderBody()
        </section>
    </div>
</body>
</html>